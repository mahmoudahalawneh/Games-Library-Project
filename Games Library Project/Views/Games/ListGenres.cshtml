@{
    ViewData["Title"] = "Genres List";
}
@model List<Genre>
<table class="table table-bordered table-striped Centre">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td><a asp-controller="Games" asp-action="EditGenre" asp-route-id="@genre.GenreId">Edit</a></td>
                <td><a asp-controller="Games" asp-action="DeleteGenre" asp-route-id=@genre.GenreId>Delete</a></td>
            </tr>
        }
        <tr>
            <td colspan=2><a asp-controller="Games" asp-action="AddGenre">Add Genre</a></td>
            <td><a asp-controller="Games" asp-action="List">Go Back</a></td>
        </tr>
    </tbody>
</table>