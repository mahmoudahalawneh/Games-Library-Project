@{
    ViewData["Title"] = "Game List";
}
@model List<Game>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>REMOVE</th>
            <th>Name</th>
            <th>Publisher</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var game in Model)
        {
            <tr>
                <td>@game.GameId</td>
                <td>@game.Name</td>
                <td>@game.Publisher.Name</td>
                <td>@game.Year</td>
                <td>@game.Genre.Name</td>
                <td><a asp-controller="Games" asp-action="Detail" asp-route-id="@game.GameId">Detail</a></td>
            </tr>
        }
    </tbody>
</table>