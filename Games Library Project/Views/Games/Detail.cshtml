@model IQueryable<Game>
@{
    
    var game = @Model.First();
    ViewData["Title"] = "Detail "+@game.Name;
}
@{
    <h1 class="Centre">@game.Name</h1>
    <p class="Centre">Game's Img</p>
    <img src=@game.ImgLink alt="Game's Img" width="1152" height="648" /><br />
        <p>
        Publisher: @game.Publisher.Name<br>
        Release Year: @game.Year<br>
        Game's Genre: @game.Genre.Name<br>
        Available on: @game.Available<br>
        Price: @game.Price <br>
        Where to get: <a href=@game.StoreLink>@game.StoreLink</a> <br>
        </p>
}

<table class="table table-bordered table-striped Centre">
        <tr>
            <td><a asp-controller="Games" asp-action="EditGame" asp-route-id=@game.GameId>Edit</a></td>
            <td><a asp-controller="Games" asp-action="DeleteGame" asp-route-id=@game.GameId>Delete</a></td>
        </tr>
</table>